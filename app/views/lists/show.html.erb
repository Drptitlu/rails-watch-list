<br>

<div class= "container">
<p class="h1"><%= @list.name %></p>
<p><strong>Name:</strong> <%= @list.name %></p>

<div class="container">
<p class="h2">Bookmarks</p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %> <%= bookmark.movie.title %></li>
  <% end %>
</ul>
</div>
</div>
<div class="container">
<%= link_to "index", lists_path, class: "btn btn-primary mt-3"%>
<%= link_to 'Leave a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
</div>
